<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="896dp"
        android:background="@drawable/solicitar_cita2"
        tools:context=".solicitarDatosUbicacion">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/pisoETCita"
            app:layout_constraintStart_toStartOf="@+id/pisoETCita"
            app:srcCompat="@drawable/house" />

        <EditText
            android:id="@+id/pisoETCita"
            android:layout_width="352dp"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Piso, Oficina o Apto"
            android:inputType="textPersonName"
            android:paddingLeft="42sp"
            android:paddingBottom="15sp"
            android:textColor="#020101"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direccionETCita" />

        <EditText
            android:id="@+id/descripcionUbiETCita"
            android:layout_width="0dp"
            android:layout_height="162dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_spinner"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Descripción Adicional"
            android:textColor="#817F7F"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pisoETCita" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="200 palabras máximo"
            android:textColor="#817F7F"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descripcionUbiETCita" />

        <Button
            android:id="@+id/siguiente2"
            android:layout_width="347dp"
            android:layout_height="54dp"
            android:layout_marginTop="79dp"
            android:layout_marginBottom="84dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_semibold"
            android:text="siguiente"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/direccionETCita"
            app:layout_constraintStart_toStartOf="@+id/direccionETCita"
            app:srcCompat="@drawable/ubicacion" />

        <EditText
            android:id="@+id/direccionETCita"
            android:layout_width="352dp"
            android:layout_height="58dp"
            android:layout_marginTop="222dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Dirección"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="42sp"
            android:paddingBottom="15sp"
            android:textColor="#020101"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usuarioNameCita2" />

        <TextView
            android:id="@+id/usuarioNameCita2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="242dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="cargando.."
            android:textColor="#faffff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>