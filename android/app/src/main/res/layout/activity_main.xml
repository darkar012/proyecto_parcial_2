<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="2335px"
        android:background="@drawable/login"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/loginp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="343dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Iniciar Sesi칩n"
            android:textColor="#5B5454"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <EditText
            android:id="@+id/correoET"
            android:layout_width="352dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:paddingLeft="42sp"
            android:paddingBottom="15sp"
            android:textColor="#020101"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="352dp"
            android:layout_height="58dp"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Contrase침a"
            android:inputType="textPassword|textWebPassword"
            android:paddingLeft="42sp"
            android:paddingBottom="15sp"
            android:textColor="#020101"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/correoET" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="17dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/correoET"
            app:layout_constraintStart_toStartOf="@+id/correoET"
            app:srcCompat="@drawable/arroba" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="17dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/passwordET"
            app:layout_constraintStart_toStartOf="@+id/passwordET"
            app:srcCompat="@drawable/locked" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="347dp"
            android:layout_height="54dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_semibold"
            android:text="Iniciar Sesi칩n"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordET" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:fontFamily="@font/poppins_medium"
            android:text="O, inicia sesi칩n con"
            android:textColor="#817F7F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="73dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Eres un cliente nuevo?"
            android:textColor="#817F7F"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/signUpLink"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/googleBtn" />

        <ImageButton
            android:id="@+id/googleBtn"
            android:layout_width="89.76dp"
            android:layout_height="54dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/gg"
            android:background="@drawable/google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/signUpLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Registrate"
            android:textColor="#0088FF"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>