<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="896dp"
    android:background="@drawable/perfil"
    tools:context=".perfil" >

    <TextView
        android:id="@+id/usuarioName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="cargando.."
        android:textColor="#faffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="92dp"
        android:layout_height="96dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile"
        tools:srcCompat="@drawable/profile" />

    <Button
        android:id="@+id/soliCitaBtn"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginTop="286dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Solicitar Cita"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioName" />

    <Button
        android:id="@+id/verCitas"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ver mis citas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soliCitaBtn" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="182dp"
        android:background="#E4EAFC"
        android:fontFamily="@font/poppins_semibold"
        android:text="Cerrar SesiÃ³n"
        android:textColor="#3184CD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verCitas" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>